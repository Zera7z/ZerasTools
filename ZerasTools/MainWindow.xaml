<Window x:Class="ZerasTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zera's Tools"
        Width="950"
        Height="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#1A1A1A"
            CornerRadius="20"
            BorderBrush="#333"
            BorderThickness="1">
        <DockPanel>

            <!-- Top Title Bar -->
            <Grid Height="56" Background="#111" DockPanel.Dock="Top" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="Zera's Tools"
                           Foreground="White"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,14,0">
                    <!-- Settings Icon -->
                    <Button x:Name="SettingsButton"
                            Content="⚙"
                            Width="36"
                            Height="26"
                            Click="SettingsButton_Click"
                            Background="#2A2A2A"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="4,0"/>
                    <!-- Minimize -->
                    <Button Content="—"
                            Width="36"
                            Height="26"
                            Click="Minimize_Click"
                            Background="#2A2A2A"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="4,0"/>
                    <!-- Close -->
                    <Button Content="✕"
                            Width="36"
                            Height="26"
                            Click="Close_Click"
                            Background="#2A2A2A"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="4,0"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <!-- Shorter sidebar -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0"
                        Background="#262626"
                        CornerRadius="18"
                        Margin="10">
                    <StackPanel Margin="10,20,10,10">
                        <!-- Home button bigger -->
                        <Button x:Name="HomeButton"
                                Content="Home"
                                Height="60"
                                FontSize="18"
                                Margin="0,0,0,10"
                                Click="HomeButton_Click"
                                Background="#2A2A2A"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"/>

                        <!-- Image to ICO button -->
                        <Button x:Name="ImageToIcoButton"
                                Content="Image to ICO"
                                Height="50"
                                FontSize="16"
                                Click="ImageToIcoButton_Click"
                                Background="#2A2A2A"
                                Foreground="White"
                                BorderThickness="0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="18"
                        Margin="10">
                    <StackPanel Margin="24">
                        <TextBlock x:Name="ToolTitle"
                                   FontSize="26"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>
                        <ContentControl x:Name="MainContent"/>
                    </StackPanel>
                </Border>
            </Grid>

        </DockPanel>
    </Border>
</Window>
