<UserControl x:Class="ZerasTools.Views.PngToIcoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A">
    <StackPanel Margin="20">

        <Border Height="220"
                BorderBrush="#444"
                BorderThickness="2"
                CornerRadius="16"
                Margin="0,0,0,20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Drag &amp; Drop Image"
                           Foreground="White"
                           FontSize="20"
                           HorizontalAlignment="Center"/>
                <Button x:Name="BrowseButton"
                        Content="Browse"
                        Width="160"
                        Height="38"
                        Margin="0,12,0,0"/>
                <TextBlock Text="PNG, JPG supported"
                           Foreground="#888"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <TextBlock Text="OPTIONS"
                   Foreground="White"
                   FontSize="18"
                   Margin="0,10,0,6"/>

        <ComboBox x:Name="SizeComboBox" Width="180" Margin="0,4">
            <ComboBoxItem Content="256 x 256"/>
            <ComboBoxItem Content="128 x 128"/>
            <ComboBoxItem Content="64 x 64"/>
        </ComboBox>

        <Button x:Name="ConvertButton"
                Content="Convert"
                Width="200"
                Height="42"
                Margin="0,16,0,0"/>
    </StackPanel>
</UserControl>
